{% extends 'layout.html.twig' %}

{% block content %}

    <h1>Items</h1>
    <ul>
        {% for todo in todos %}
            <li><a href="/todo/show?id={{ todo.id }}">{{ todo['name'] }}.</a></li>
        {% else %}
            <li>Nothing to display</li>
        {% endfor %}
    </ul>
    <a href="/todo/add">Ajouter</a>
{% endblock %}
